<% provide(:title, "Log in") %>
<div class="wrapper user_forms">
  <h1>Log in</h1>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <%= form_for(:session, url: login_path) do |f| %>
        <%= f.email_field :email, :placeholder => 'Email', class: 'form-control form-custom' %>
        <%= f.password_field :password, :placeholder => 'Password', class: 'form-control form-custom' %>

        <%= f.submit "Log in", class: "btn btn-lg btn-custom" %>
      <% end %>

      <small>New user? <%= link_to "Sign up now", signup_path %></small>
    </div>
  </div>
</div>
